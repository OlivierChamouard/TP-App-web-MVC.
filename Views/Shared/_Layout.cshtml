    <link rel="stylesheet" href="~/resources/Css/site.css" />
</head>
<header>
	<img src="~/resources/Image/GroupeHN.png" class="image" alt="GroupeHN" />
	<h1>@h1</h1>
</header>

<body>
    <nav>
        <ul>
            <li><a href="@l1">@lib1</a></li>
