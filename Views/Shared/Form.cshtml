@model TPLOCAL1.Models.InfoPerso 
 <head>  
    <title>HN - TP Formulaire</title>  
    <link rel="stylesheet" type="text/css" href="~/resources/Css/Form.css">
</head>  
<header>  
    <img src="~/resources/Image/GroupeHN.png" class="image" alt="GroupeHN" />  
    <h1>Formulaire TP HN avis</h1>  
</header>  
<body>  
    <nav>  
     <ul>  
            <li><a href="/Home/Index">Accueil</a></li>  
            <li><a href="/Home/Index/OpinionList">Avis list</a></li>
        </ul>  
   </nav>
        <div class='parent'>
    <div class='child inline-block-child'>
    <form asp-action="ValidationForm" method="post">
        <table>
            <caption>Informations Personelles</caption>

            <tr>
                <td><label asp-for="Nom" class="control-label">Nom</label></td>
                <td><input asp-for="Nom" name="Nom" class="form-control" /></td>
            </tr>
            <tr>
                <td><label asp-for="Prenom" class="control-label">Prénom</label></td>
                <td><input asp-for="Prenom" name="Prenom" class="form-control" /></td>
            </tr>
            <tr>
                <td><label asp-for="Sexe" class="control-label">Sexe</label></td>
                <td>@Html.DropDownList("Sexe", ViewData["Sexe"] as IEnumerable<SelectListItem>, "Sélectionner un sexe", new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td><label asp-for="Adresse" class="control-label">Adresse</label></td>
                <td><input asp-for="Adresse" name="Adresse" class="form-control" /></td>
            </tr>
            <tr>
                <td><label asp-for="CodePostal" class="control-label">Code Postal</label></td>
                <td><input asp-for="CodePostal" name="CodePostal" class="form-control" /></td>
            </tr>
            <tr>
                <td><label asp-for="Ville" class="control-label">Ville</label></td>
                <td><input asp-for="Ville" name="Ville" class="form-control" /></td>
            </tr>

            <tr>
                <td><label asp-for="Email" class="control-label">Adresse Mail</label></td>
                <td><input asp-for="Email" name="Email" class="form-control" /></td>
            </tr>
        </table>
        <table>
            <caption>Informations sur la Formation Suivie</caption>
            <tr>
                <td><label asp-for="Date" class="control-label">Date début Formation</label></td>
                <td><input asp-for="Date" name="Date" class="form-control" type="date" /></td>

            </tr>
            <tr>
                <td><label asp-for="Cours" class="control-label">Formation Suivie</label></td>
                <td>
                    @Html.DropDownList("Cours", ViewData["Cours"] as IEnumerable<SelectListItem>, "Sélectionner une formation", new { @class = "form-control" })
                </td>

            </tr>
        </table>
        <table>
            <caption>Avis sur la Formation</caption>
            <tr>
                <td><label asp-for="Cobol" class="control-label">Formation Cobol</label></td>
                <td><input asp-for="Cobol" name="Cobol" class="form-control" /></td>

            </tr>
            <tr>
                <td><label asp-for="CSharp" class="control-label">Formation C#</label></td>
                <td><input asp-for="CSharp" name="CSharp" class="form-control" /></td>

            </tr>
        </table>
        <div><button type="submit" class="btn btn-primary">Valider</button></div>
    </form>
    </div>
        <div class='child inline-block-child'>
    <section>
        <p>
            <div asp-validation-summary="All" class="text-danger"></div>
        </p>
    </section>
      </div>
    </div>
</body> 
 
   
 
 





